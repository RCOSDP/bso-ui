FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci --silent
COPY . .
ARG REACT_APP_OPENDATASOFT_API_KEY
ENV REACT_APP_OPENDATASOFT_API_KEY=$REACT_APP_OPENDATASOFT_API_KEY
ARG REACT_APP_OS_PASSWORD
ENV REACT_APP_OS_PASSWORD=$REACT_APP_OS_PASSWORD
ARG REACT_APP_OS_TENANT_NAME
ENV REACT_APP_OS_TENANT_NAME=$REACT_APP_OS_TENANT_NAME
ARG REACT_APP_OS_USERNAME
ENV REACT_APP_OS_USERNAME=$REACT_APP_OS_USERNAME
RUN REACT_APP_OS_USERNAME=$REACT_APP_OS_USERNAME npm run build:staging

# staging environment
FROM nginx:stable
COPY --from=build /app/build /usr/share/nginx/html
COPY ./nginx/templates /etc/nginx/templates
EXPOSE 3000
